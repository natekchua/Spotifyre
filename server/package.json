  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "commitizen": "^4.2.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pg": "^8.5.1",
    "spotify-web-api-node": "^5.0.0",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "2.2.0",
    "concurrently": "^4.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
